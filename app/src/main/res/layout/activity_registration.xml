<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="868dp"
            android:layout_height="1545dp"
            android:layout_margin="16sp"
            app:cardBackgroundColor="@color/material_dynamic_neutral70"
            app:cardCornerRadius="24sp"
            app:cardElevation="24sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/laLoginLogo"
                    android:layout_width="250sp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="Register Here"
                    android:textAlignment="center"
                    android:textColor="@color/material_dynamic_neutral60"
                    android:textSize="29sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:id="@+id/etRegisterName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16sp"
                    android:fontFamily="casual"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/material_dynamic_primary80"
                    android:textColorHint="@color/material_dynamic_primary40"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16sp"
                    android:fontFamily="casual"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:textColor="@color/material_dynamic_primary80"
                    android:textColorHint="@color/material_dynamic_primary40"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterEmailID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16sp"
                    android:fontFamily="casual"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/material_dynamic_primary80"
                    android:textColorHint="@color/material_dynamic_primary40"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16sp"
                    android:fontFamily="casual"
                    android:hint="UserName"
                    android:inputType="text"
                    android:textColor="@color/material_dynamic_primary80"
                    android:textColorHint="@color/material_dynamic_primary40"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16sp"
                    android:fontFamily="casual"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/material_dynamic_primary80"
                    android:textColorHint="@color/material_dynamic_primary40"
                    android:textSize="19sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegisterRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:background="@color/material_dynamic_neutral70"
                    android:text="Register"
                    android:textColor="@color/darcula"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
